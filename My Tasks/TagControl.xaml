<UserControl x:Class="AdventureAuthor.Tasks.TagControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="{Binding}"
			       FontSize="16"
			       FontWeight="SemiBold"
			       Foreground="DarkBlue"
			   	   Padding="4"/>
			<Button x:Name="DeleteTagButton"
					Width="8" 
			        Height="{Binding ElementName=DeleteTagButton, Path=Width}"
					Margin="4"
			        VerticalAlignment="Center"
			        HorizontalAlignment="Center">
				<Button.Template>
					<ControlTemplate>
						<Grid>							
							<Rectangle Fill="LightGray" 
							         Width="{Binding ElementName=DeleteTagButton, Path=Width}"
							         Height="{Binding ElementName=DeleteTagButton, Path=Height}"/>
							<Line Stroke="Red" X1="0" X2="{Binding ElementName=DeleteTagButton, Path=Width}"
											   Y1="0" Y2="{Binding ElementName=DeleteTagButton, Path=Height}"/>
							<Line Stroke="Red" X1="{Binding ElementName=DeleteTagButton, Path=Width}" X2="0"
											   Y1="0" Y2="{Binding ElementName=DeleteTagButton, Path=Height}"/>
						</Grid>							
					</ControlTemplate>
				</Button.Template>
			</Button>
		</StackPanel>
	</Grid>
</UserControl>