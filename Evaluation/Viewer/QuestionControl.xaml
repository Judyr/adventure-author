<UserControl x:Class="AdventureAuthor.Evaluation.UI.QuestionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="400"/>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
	
		<TextBlock Name="QuestionText" Grid.Row="0" Grid.Column="0" 
    	           FontSize="14" Margin="3" Padding="3" TextWrapping="Wrap" VerticalAlignment="Center"/>
		<StackPanel Name="AnswersPanel" Grid.Row="0" Grid.Column="1"
					Orientation="Horizontal" VerticalAlignment="Center"/>
    </Grid>
</UserControl>