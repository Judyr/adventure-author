<local:OptionalWorksheetPartControl x:Class="AdventureAuthor.Evaluation.Viewer.CommentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AdventureAuthor.Evaluation.Viewer">
	<StackPanel Orientation="Horizontal">
	    <StackPanel Name="CommentPanel" Orientation="Horizontal">
			<Label Name="CommentLabel" Content="Comment: "
	    		   FontSize="14" Foreground="Black"/>
			<TextBox Name="CommentTextBox" 
	    	         Width="200" MinHeight="30" Margin="5" Padding="3" TextWrapping="Wrap"
	    			 FontFamily="ComicSans"/>
		</StackPanel>
		<CheckBox Name="ActivateCheckBox"
		          Height="25" Width="25"
		    	  IsChecked="true" Checked="OnChecked" Unchecked="OnUnchecked"
				  Margin="8" Visibility="Collapsed" VerticalAlignment="Center"/>
	</StackPanel>
</local:OptionalWorksheetPartControl>