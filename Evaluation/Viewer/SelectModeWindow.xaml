<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="AdventureAuthor.Evaluation.Viewer.SelectModeWindow" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Would you like to..."
	WindowStartupLocation="CenterScreen"
	MinWidth="390" MaxWidth="390" MinHeight="125" MaxHeight="125">
	<StackPanel Orientation="Vertical" Margin="6">
		<Button
			Content="Complete/mark a worksheet (kids and teachers)"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top"
			Height="34"
			Width="370"
			FontSize="14"
			Margin="2"
			Click="OnClick_PupilMode"/>
		<Button
			FontSize="14"
			Content="Create/edit a worksheet (teachers only)"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Bottom"
			Height="34"
			Width="370"
			Margin="2"
			Click="OnClick_DesignerMode"/>
	</StackPanel>
</Window>