<UserControl x:Class="AdventureAuthor.Evaluation.UI.SectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<UserControl.Resources>
		<Brush x:Key="Stripe1Brush">#B4C8FF</Brush>
		<Brush x:Key="Stripe2Brush">#96AFFF</Brush>
	</UserControl.Resources>
    <Border Name="SectionBorder" BorderThickness="2,2,2,0" BorderBrush="Black">
		<Grid>
	    	<Grid.RowDefinitions>
				<RowDefinition Height="40"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
	    	<Grid.ColumnDefinitions>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>    	
			<Border Grid.Row="0" Grid.Column="0" 
			        BorderThickness="0,0,0,2" BorderBrush="Black">
	    		<Label Name="SectionTitle"
				       FontSize="20" Background="LightGreen"
					   VerticalAlignment="Center"/>
			</Border>
    		<StackPanel Name="QuestionsPanel" Grid.Row="1" Grid.Column="0"/>    	
    	</Grid>
	</Border>
</UserControl>