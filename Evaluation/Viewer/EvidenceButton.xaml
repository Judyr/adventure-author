<UserControl x:Class="AdventureAuthor.Evaluation.UI.EvidenceButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal">
		<Label Content="Evidence:" VerticalAlignment="Center" FontSize="12" Margin="5"/>
    	<Button Name="SelectButton" Content="Select" Click="OnClick_SelectEvidence"
    			Height="30" Width="60" FontSize="12" Margin="5" />
    	<Button Name="ViewButton" Content="View" Click="OnClick_ViewEvidence"
    			Height="30" Width="60" FontSize="12" Margin="5"/>	
    	<Button Name="ClearButton" Content="Clear" Click="OnClick_ClearEvidence"
    			Height="30" Width="60" FontSize="12" Margin="5"/>
    </StackPanel>
</UserControl>