<UserControl x:Class="AdventureAuthor.Evaluation.UI.CompositeQuestionPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
    		<ColumnDefinition MaxWidth="300"/>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
	
		<TextBlock x:Name="QuestionLabel" Grid.Row="0" Grid.Column="0"
    	       	   FontSize="14" Padding="10" TextWrapping="Wrap"/>
		<StackPanel x:Name="SubQuestionsPanel" Grid.Row="0" Grid.Column="1"
    	            Orientation="Horizontal"/>
    </Grid>
</UserControl>