<Window x:Class="AdventureAuthor.Conversations.UI.ReplaceSpeakerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Replace a speaker" SizeToContent="WidthAndHeight" Background="LightBlue" ResizeMode="NoResize"
    >
    <StackPanel Orientation="Vertical">	    	
		<TextBlock FontSize="16" Foreground="Red" 
    	           Canvas.Top="15" Canvas.Left="15"
    	           Width="300" 
		           Text="Select the speaker you want to replace:"
    			   Margin="10" />
    	<ComboBox Name="SpeakersList" 
    	          IsReadOnly="true" IsEditable="false" IsTextSearchEnabled="true"
    			  Canvas.Top="55" Canvas.Left="15" 
    	          Height="28" Width="270" 
    	          FontSize="14"
    			  Margin="10" HorizontalAlignment="Left">
    		<ComboBox.ItemsSource>
        		<Binding Source="{StaticResource speakers}" Mode="OneTime"/> 
        	</ComboBox.ItemsSource>
    	</ComboBox>	
		<TextBlock FontSize="16" Foreground="Red" 
    	           Canvas.Top="15" Canvas.Left="15"
    	           Width="300" 
		           Text="Enter the new tag of this speaker:"
    			   Margin="10"/>	
		<TextBox x:Name="newTagTextBox" FontSize="16" 
    	           Canvas.Top="15" Canvas.Left="15"
    	           Height="30" Width="200"
		           AcceptsReturn="false"
    			   Margin="10" HorizontalAlignment="Left"/>
    	<StackPanel Orientation="Horizontal" FlowDirection="RightToLeft"> 
			<Button Name="CancelButton" 
	    	        Height="30" Width="70" Margin="10"
	    	        Canvas.Top="120" Canvas.Right="100" 
			        Content="Cancel" 
			        Click="OnClickCancel"/>
			<Button Name="OKButton" 
	    	        Height="30" Width="70" Margin="10"
			        Canvas.Top="120" Canvas.Right="15" 
			        Content="OK" 
			        Click="OnClickOK"/>		
	   	</StackPanel>
	</StackPanel>
</Window>
