<UserControl x:Class="AdventureAuthor.Conversations.UI.Controls.SoundControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	MouseDown="OnMouseDown">
		
	<UserControl.Triggers>
		<EventTrigger RoutedEvent="Button.Click" SourceName="PlaySoundButton">
		<EventTrigger.Actions>
			<SoundPlayerAction x:Name="SoundPlayer"/>
		</EventTrigger.Actions>
		</EventTrigger>
	</UserControl.Triggers>
	
    <Grid>
		<Grid.RowDefinitions>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="100"/>
    		<ColumnDefinition Width="*"/>
    	</Grid.ColumnDefinitions>
    	<StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">  
			<Button Name="PlaySoundButton" IsEnabled="false" Opacity="0.0" Content="Listen" Height="25" Width="60" Margin="6"/>
			<TextBlock x:Name="Description" Background="Transparent" FontSize="22" FontWeight="600" Padding="6" TextWrapping="Wrap"/> 
    	</StackPanel>
    </Grid>
</UserControl>
