<UserControl x:Class="AdventureAuthor.Conversations.UI.Controls.ChoiceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid AllowDrop="true" Drop="OnDrop">
    	<Grid.RowDefinitions>
    		<RowDefinition MinHeight="100" Height="*"/>
    	</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
    		<ColumnDefinition MinWidth="650" MaxWidth="1050" Width="*"/>
    	</Grid.ColumnDefinitions>
    	<Border Grid.Row="0" Grid.Column="0" BorderThickness="2" BorderBrush="Black">
    		<StackPanel Orientation="Vertical">
	    		<StackPanel Background="AliceBlue" Orientation="Vertical" Name="OptionsPanel"/>
	    		<StackPanel Background="LightBlue" Orientation="Horizontal">
	    			<Button Click="OnClick_AddBranch" Margin="1" Content="Add Branch"/> 
	    			<Button Click="OnClick_DeleteEntireChoice" Margin="1" Content="Delete Entire Choice"/> 
	    		</StackPanel>
    		</StackPanel>
    	</Border>		
    </Grid>
</UserControl>
