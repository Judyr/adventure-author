<local:BoardObject x:Class="AdventureAuthor.Ideas.MagnetControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:AdventureAuthor.Ideas"
	xmlns:utils="clr-namespace:AdventureAuthor.Utils"
	Focusable="true"
	MouseDown="magnetControlMouseDown"
	Canvas.ZIndex="2"
	AllowDrop="true">
	<local:BoardObject.ContextMenu>
		<ContextMenu>
	    	<MenuItem Name="editMenuItem" Header="Edit" Click="OnClick_Edit"/>
			<Separator/>
	    	<MenuItem Name="bringToFrontMenuItem" Header="Bring to front" Click="OnClick_BringToFront"/>
	    	<MenuItem Name="sendToBackMenuItem" Header="Send to back" Click="OnClick_SendToBack"/>
			<Separator/>
	    	<MenuItem Name="removeDeleteMagnetMenuItem" Header="Delete" Click="OnClick_RemoveDelete"/>
			<Separator/>
	    	<MenuItem Name="addToTasksMenuItem" Header="Add to my to-do list" Click="OnClick_AddToTasksDelete"
						IsEnabled="false"/>
		</ContextMenu>
	</local:BoardObject.ContextMenu>
    <Border Name="magnetBorder" BorderThickness="2" BorderBrush="Black">
	    	<TextBlock x:Name="IdeaTextBox" Grid.Row="0" Grid.Column="0" FontSize="16"
					    	         Padding="8" TextWrapping="Wrap" TextAlignment="Center" Focusable="true"
					    	         VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Border>
</local:BoardObject>