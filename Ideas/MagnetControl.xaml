<local:BoardObject x:Class="AdventureAuthor.Ideas.MagnetControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:AdventureAuthor.Ideas"
	xmlns:utils="clr-namespace:AdventureAuthor.Utils"
	MouseDown="MagnetControl_OnMouseDown">
    <Grid>
        <Grid.RowDefinitions>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
    	<Border Name="magnetBorder" BorderThickness="2" BorderBrush="Black">
	    	<utils:SwitchableTextBox x:Name="IdeaTextBox" Grid.Row="0" Grid.Column="0" FontSize="16"
					    	         Padding="8" TextWrapping="Wrap" TextAlignment="Center" 
					    	         VerticalAlignment="Center" HorizontalAlignment="Center"/>
    	</Border>
    </Grid>
</local:BoardObject>