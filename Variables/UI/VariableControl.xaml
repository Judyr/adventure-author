<UserControl x:Class="AdventureAuthor.Variables.UI.VariableControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/> <!--variable name-->
			<ColumnDefinition/> <!--variable value-->
			<ColumnDefinition/> <!--delete-->
		</Grid.ColumnDefinitions>
		<TextBlock Name="VariableNameTextBox" Width="200" Height="40" Grid.Row="0" Grid.Column="0" />
		<TextBlock Name="VariableValueTextBox" Width="200" Height="40" Grid.Row="0" Grid.Column="1" />
    	<StackPanel Grid.Row="0" Grid.Column="2" Width="100" Orientation="Horizontal">
		    <Button Margin="6" Width="20" Height="20" IsEnabled="true" Opacity="1.0" Click="OnClick_Delete">
	    		<Button.ToolTip>
	    			<ToolTip>Delete this variable</ToolTip>
	    		</Button.ToolTip>
		    	<Image Source="C:\ConversationWriter\deleteicon.jpg" />
		    </Button> 
			<Button Margin="6" Width="50" Height="25" IsEnabled="true" Opacity="1.0" Content="Edit" Click="OnClick_Edit">
	    		<Button.ToolTip>
	    			<ToolTip>Edit this variable</ToolTip>
	    		</Button.ToolTip>
		    </Button> 
		</StackPanel>
    </Grid>
</UserControl>
