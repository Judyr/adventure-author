<Window x:Class="AdventureAuthor.Variables.UI.VariablesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Variable Manager" Height="400" Width="540"
    >
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="100"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="400" Width="*"/>
		</Grid.ColumnDefinitions>
        <ListBox Name="VariablesList" Grid.Column="0" Grid.Row="0" Background="LightBlue"/>
        <Canvas Grid.Column="0" Grid.Row="1">
        	<Button Canvas.Top="10" Canvas.Right="10" Height="30" Width="120" Content="Add variable" Click="OnClick_AddVariable"/>
        </Canvas>
    </Grid>
</Window>
