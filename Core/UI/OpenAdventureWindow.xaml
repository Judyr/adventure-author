<Window x:Class="AdventureAuthor.Core.UI.OpenAdventureWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Open Adventure" Height="500" Width="300"
    >
    <StackPanel>
        <ListBox Name="adventuresList" SelectionMode="Single" ItemsSource="{Binding Source={StaticResource adventurenames}}"/>
		<StackPanel Orientation="Horizontal">
    		<Button Click="OnClickCancel">Cancel</Button>
    		<Button Click="OnClickOK">OK</Button>
    	</StackPanel>
    </StackPanel>
</Window>
