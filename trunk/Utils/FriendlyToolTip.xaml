<ToolTip x:Class="AdventureAuthor.Setup.UI.FriendlyToolTip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
		<Label Name="TitleLabel" FontWeight="Bold" Background="Green" Foreground="White"/>
		<TextBlock Name="MainText" Padding="10" TextWrapping="WrapWithOverflow" Width="200"/>
		<Line Name="SeperatorLine" Stroke="Black" StrokeThickness="1" X1="0" X2="200"/>
		<StackPanel Name="HintPanel" Orientation="Horizontal">
    		<TextBlock Name="HintText" Padding="10" TextWrapping="WrapWithOverflow" Width="200" FontWeight="Bold"/>
    	</StackPanel>
	</StackPanel>
</ToolTip>