<UserControl x:Class="AdventureAuthor.Evaluation.UI.EvidenceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal">
		<Button Name="ViewLink" Click="OnClick_ViewEvidence" 
    	        Height="30" Margin="5" Foreground="Transparent" Background="Transparent" BorderThickness="0">
    		<TextBlock Name="ViewLinkText" 
			           FontSize="12" Foreground="Red" Background="Transparent"/>
    	</Button>
		<Button Name="SelectLink" Click="OnClick_SelectEvidence" 
    	        Height="30" FontSize="12" Margin="5" Foreground="Transparent" Background="Transparent" BorderThickness="0">
    		<TextBlock Name="SelectLinkText" 
			           FontSize="12" TextDecorations="Underline" Foreground="Black" Background="Transparent"
					   HorizontalAlignment="Left"/>
    	</Button>
		<Button Name="ClearLink" Click="OnClick_ClearEvidence" 
    	        Height="30" FontSize="12" Margin="5" Foreground="Transparent" Background="Transparent" BorderThickness="0">
    		<TextBlock Name="ClearLinkText" 
			           Text="Clear" FontSize="12" TextDecorations="Underline" Foreground="Black" Background="Transparent"/>
    	</Button>
    </StackPanel>
</UserControl>