<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="AdventureAuthor.Evaluation.Viewer.SelectModeWindow" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Would you like to..."
	WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
	<StackPanel Orientation="Vertical" Margin="30">
		<Button
			FontSize="14"
			Content="Create/edit a worksheet (teachers only)"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Bottom"
			Height="34"
			Width="370"
			Margin="4"
			Click="OnClick_DesignMode"/>
		<Button
			Content="Fill in a worksheet"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top"
			Height="34"
			Width="370"
			FontSize="14"
			Margin="4"
			Click="OnClick_CompleteMode"/>
		<Button
			FontSize="14"
			Content="Discuss a completed worksheet"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Bottom"
			Height="34"
			Width="370"
			Margin="4"
			Click="OnClick_DiscussMode"/>
	</StackPanel>
</Window>