<UserControl x:Class="AdventureAuthor.Evaluation.Viewer.ActivatedAnswerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Name="MainGrid">
		<Grid.RowDefinitions>
    		<RowDefinition/>
    		<RowDefinition Height="35"/>
    	</Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
    	<CheckBox Name="ActivateCheckBox" Grid.Row="1" Grid.Column="0" 
    	          Content="Active?" Checked="OnChecked" Unchecked="OnUnchecked"/>
	</Grid>
</UserControl>