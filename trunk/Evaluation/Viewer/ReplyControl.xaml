<local:OptionalWorksheetPartControl x:Class="AdventureAuthor.Evaluation.Viewer.ReplyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:AdventureAuthor.Evaluation.Viewer">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition MaxWidth="200"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<TextBlock Name="replyAuthorTextBlock" Grid.Row="0" Grid.Column="0" 
		           FontSize="20" FontFamily="Comic Sans MS"
		           TextWrapping="Wrap" Margin="15" TextAlignment="Right"
				   MinWidth="200" MaxWidth="200" VerticalAlignment="Top"/>
		<TextBlock Name="replyBodyTextBlock" Grid.Row="0" Grid.Column="1" 
		           FontSize="16" FontFamily="Comic Sans MS" 
		           TextWrapping="Wrap" Margin="15" Padding="4"
		           MaxWidth="600" TextAlignment="Left" HorizontalAlignment="Left"/>
	</Grid>	
</local:OptionalWorksheetPartControl>