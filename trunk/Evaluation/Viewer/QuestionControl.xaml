<local:OptionalWorksheetPartControl x:Class="AdventureAuthor.Evaluation.Viewer.QuestionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AdventureAuthor.Evaluation.Viewer">
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="300"/>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
    	
		<StackPanel x:Name="AnswersPanel" Grid.Row="0" Grid.Column="1"
					Orientation="Horizontal" VerticalAlignment="Center"/>
	
    	<StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
			<TextBlock Name="QuestionTitle"
		    	       FontSize="14" Margin="3" Padding="3" TextWrapping="Wrap" VerticalAlignment="Center"/>
			<CheckBox Name="ActivateCheckBox"
			    	  Content="Active?" IsChecked="true" Checked="OnChecked" Unchecked="OnUnchecked"
					  Margin="8" Visibility="Collapsed" HorizontalAlignment="Right"/>
    	</StackPanel>
	
    </Grid>
</local:OptionalWorksheetPartControl>