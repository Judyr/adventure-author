<local:OptionalWorksheetPartControl x:Class="AdventureAuthor.Evaluation.Viewer.QuestionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AdventureAuthor.Evaluation.Viewer">
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="340"/>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
    	
		<StackPanel x:Name="AnswersPanel" Grid.Row="0" Grid.Column="1"
					Orientation="Horizontal" VerticalAlignment="Center"/>
	
    	<StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
			<TextBox Name="QuestionTitle"
		    	     FontSize="16" FontFamily="Arial" Margin="3" Padding="3" AcceptsReturn="false"
			         Width="300" TextWrapping="Wrap" VerticalAlignment="Center"/>
			<CheckBox Name="ActivateCheckBox"
			    	  IsChecked="true" Checked="OnChecked" Unchecked="OnUnchecked"
					  Margin="8" Visibility="Collapsed" VerticalAlignment="Center">
				<CheckBox.LayoutTransform>
					<ScaleTransform ScaleX="1.7" 
			                        ScaleY="1.7"/>
			    </CheckBox.LayoutTransform>   
    		</CheckBox>
    	</StackPanel>
	
    </Grid>
</local:OptionalWorksheetPartControl>