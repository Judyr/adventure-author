<local:OptionalWorksheetPartControl x:Class="AdventureAuthor.Evaluation.Viewer.CommentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AdventureAuthor.Evaluation.Viewer"
	VerticalAlignment="Center">
	<StackPanel Orientation="Horizontal">
	    <StackPanel Name="CommentPanel" Orientation="Horizontal">
			<TextBlock Name="CommentLabel" Text="Comment: " FontFamily="Arial"
	    		   	   FontSize="14" Foreground="Black"/>
			<TextBox Name="CommentTextBox" 
	    	         Width="300" MinHeight="30" Margin="5" Padding="3" TextWrapping="Wrap"
	    			 FontFamily="Comic Sans MS"/>
		</StackPanel>
		<CheckBox Name="ActivateCheckBox"
		          Height="45" Width="45"
		    	  IsChecked="true" Checked="OnChecked" Unchecked="OnUnchecked"
				  Margin="8" Visibility="Collapsed">
			<CheckBox.LayoutTransform>
				<ScaleTransform ScaleX="1.7" 
		                        ScaleY="1.7"/>
		    </CheckBox.LayoutTransform>   
		</CheckBox>
	</StackPanel>
</local:OptionalWorksheetPartControl>