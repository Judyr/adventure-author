<Window x:Class="AdventureAuthor.Conversations.UI.AddRemoveSpeakersWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add a speaker?" Height="300" Width="300"
    >
    <Grid>
        <StackPanel Orientation="Vertical">
    		<ComboBox Name="AnswerBox" IsReadOnly="true" IsEditable="false" IsTextSearchEnabled="true"/>
        	<StackPanel>
    			<Button Content="Add speaker" Click="OnClick_AddSpeaker"/>
    			<Button Content="Cancel" Click="OnClick_Cancel"/>
    		</StackPanel>
    	</StackPanel>
    </Grid>
</Window>
