<Window x:Class="AdventureAuthor.Conversations.UI.WriterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uiw="clr-namespace:AdventureAuthor.Conversations.UI"
    xmlns:dragdrop="clr-namespace:Samples.DragDrop;assembly=Samples.DragDrop"
    Title="Conversation Writer" Top="100" Left="100" Width="1600" Height="1000" Background="LightYellow" AllowDrop="true"
    Loaded="OnLoaded" Closing="OnClosing" Closed="OnClosed" >
	
	
	<Grid Name="WriterWindowGrid">
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition/>
			<RowDefinition MinHeight="450" MaxHeight="450"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="350" Width="*"/>
			<ColumnDefinition Width="400"/>
		</Grid.ColumnDefinitions>
		<Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left">
			<MenuItem Header="File" FontSize="14">
				<MenuItem Header="New" Click="OnClick_New" FontSize="14"/>
				<MenuItem Header="Open" Click="OnClick_Open" FontSize="14"/>
				<MenuItem Header="Save" Click="OnClick_Save" FontSize="14" Name="SaveMenuItem"/>
				<!--<MenuItem Header="Save As" IsEnabled="false" FontSize="14"/>-->
				<MenuItem Header="Close" Click="OnClick_Close" FontSize="14"/>
				<MenuItem Header="Exit" Click="OnClick_Exit" FontSize="14"/>
			</MenuItem>
			<MenuItem Header="Options" FontSize="14">
				<MenuItem Header="Add a speaker" Click="OnClick_AddRemoveSpeakers" FontSize="14"/>
				<MenuItem Header="Expand graph" Click="OnClick_ExpandGraph" FontSize="14"/>
			</MenuItem>
		</Menu>
		<Border Name="ButtonsPanelBorder" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" BorderThickness="1,0,0,1" BorderBrush="Black" Background="White">
			<StackPanel Name="ButtonsPanel" Orientation="Vertical" Background="LightYellow" IsEnabled="false">
				<StackPanel Name="OtherActionsButtonsPanel" Orientation="Vertical" Margin="10">
					<Button Click="OnClick_CreateChoiceAtEndOfPage" FontSize="22">
						<TextBlock>
							<TextBlock Foreground="Black" Text="Add a"/>
							<TextBlock Foreground="Purple" Text="CHOICE"/>
						</TextBlock>
					</Button>	
				</StackPanel>
				<StackPanel Name="SpeakersButtonsPanel" Orientation="Vertical" Margin="10">
					<Button Name="AddSpeakersButton" FontSize="22" Margin="2" Click="OnClick_AddRemoveSpeakers">
						<TextBlock Foreground="Black" Text="Add another speaker"/>
					</Button>						
				</StackPanel>
			</StackPanel>
		</Border>
		<Border Grid.Row="2" Grid.Column="1" BorderThickness="1,0,0,0" BorderBrush="Black" Grid.ZIndex="-1">			
			<Grid Name="GraphGrid">
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition Height="30"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
					<Button Name="GoToStartButton" Width="194" Height="24" Margin="3" IsEnabled="false" Click="OnClick_GoToStart">Go to Start</Button>
					<Button Name="ExpandGraphButton" Width="194" Height="24" Margin="3" IsEnabled="false" Click="OnClick_ExpandGraph">Expand Graph</Button>
				</StackPanel>
			</Grid>
		</Border>
		<Border Name="LinesPanelBorder" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ZIndex="1" >
			<ScrollViewer Name="PageScroll" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Focusable="false">
	    		<StackPanel Name="LinesPanel" Orientation="Vertical" Margin="10" />
	    	</ScrollViewer>
	    </Border>
	</Grid>
</Window>

