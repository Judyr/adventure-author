<Window
	x:Class="AdventureAuthor.Conversations.UI.SoundWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Choose a sound"
	Width="400"
	Height="297">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition
				Height="0.988679245283019*" />
			<RowDefinition
				Height="1.01132075471698*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<ComboBox
			Name="SoundBox"
			IsReadOnly="true"
			IsEditable="false"
			IsTextSearchEnabled="true"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Margin="21,19,30,43" />
		<TextBox
			Name="CurrentSoundTextBox"
			IsEnabled="false"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			Grid.Row="0"
			Grid.RowSpan="2"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Margin="21,59.3333333333333,85,89" />
		<Button
			Content="OK"
			Click="OnClick_OK"
			Grid.Column="1"
			Grid.Row="1"
			HorizontalAlignment="Right"
			VerticalAlignment="Stretch"
			Margin="0,40.3333333333334,10,20.6666666666667"
			Width="76" />
		<Button
			Content="Cancel"
			Click="OnClick_Cancel"
			Grid.Column="1"
			Grid.Row="1"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Margin="20,40.3333333333334,96,20.6666666666667" />
	</Grid>
</Window>
