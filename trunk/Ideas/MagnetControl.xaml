<local:BoardObject x:Class="AdventureAuthor.Ideas.MagnetControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:AdventureAuthor.Ideas"
	xmlns:utils="clr-namespace:AdventureAuthor.Utils"
	MouseDown="MagnetControl_OnMouseDown"
	Focusable="true"
	Canvas.ZIndex="2"
	AllowDrop="true">
	<local:BoardObject.ContextMenu>
		<ContextMenu>
	    	<MenuItem Name="bringToFrontMenuItem" Header="Bring to front" Click="OnClick_BringToFront"/>
	    	<MenuItem Name="sendToBackMenuItem" Header="Send to back" Click="OnClick_SendToBack"/>
			<Separator/>
	    	<MenuItem Header="Remove" IsEnabled="false"/>
		</ContextMenu>
	</local:BoardObject.ContextMenu>
    <Grid>
        <Grid.RowDefinitions>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
    	<Border Name="magnetBorder" BorderThickness="2" BorderBrush="Black">
	    	<TextBlock x:Name="IdeaTextBox" Grid.Row="0" Grid.Column="0" FontSize="16"
					    	         Padding="8" TextWrapping="Wrap" TextAlignment="Center" Focusable="true"
					    	         VerticalAlignment="Center" HorizontalAlignment="Center"/>
    	</Border>
    </Grid>
</local:BoardObject>