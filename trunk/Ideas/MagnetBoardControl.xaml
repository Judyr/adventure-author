<local:Board x:Class="AdventureAuthor.Ideas.MagnetBoardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AdventureAuthor.Ideas"
    Canvas.ZIndex="-1"
	AllowDrop="true">
    <local:Board.Resources>
		<LinearGradientBrush x:Key="fridgeBrush" StartPoint="0,0" EndPoint="1,1">
			<GradientStop Offset="0" Color="Silver"/>
			<GradientStop Offset="1.5" Color="White"/>
		</LinearGradientBrush>
	</local:Board.Resources>	
	<Canvas Name="mainCanvas" Background="{StaticResource fridgeBrush}"/>
</local:Board>