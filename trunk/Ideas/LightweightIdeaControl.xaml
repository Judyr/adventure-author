<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="AdventureAuthor.Ideas.LightweightIdeaControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Background="LightGreen">
	<UserControl.Resources>
		<DoubleAnimation x:Key="IdeaKeptFlash">
		
		</DoubleAnimation>
	</UserControl.Resources>
	<StackPanel
		Orientation="Vertical"
		Margin="10">
		<Label>Type your idea in the box below:</Label>
		<TextBox
			Name="IdeaTextBox"
			Height="30"
			Width="200"
			AcceptsReturn="False"
			KeyDown="OnKeyDown_IdeaTextBox"/>
		<StackPanel Orientation="Horizontal" Margin="10">
			<Button
				Height="25"
				Margin="7"
				Click="OnClick_RecordIdea"
				Width="70">Keep</Button>
			<Button
				Width="70"
				Height="25"
				Click="OnClick_ClearIdea">Clear</Button>
			<Button Width="100" Height="25"
				Click="OnClick_OpenIdeaScrapbook">Open scrapbook</Button>
		</StackPanel>
	</StackPanel>
</UserControl>