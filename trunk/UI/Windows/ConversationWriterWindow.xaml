<Window x:Class="AdventureAuthor.UI.Windows.ConversationWriterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uiw="clr-namespace:AdventureAuthor.UI.Windows"
    Name="WriterWindow" Title="Conversation Writer" Width="1600" Height="1000" Background="LightYellow" Closing="OnClosing">
	<Grid Name="WriterWindowGrid">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="350" Width="*"/>
			<ColumnDefinition Width="400"/>
		</Grid.ColumnDefinitions>
		<Menu VerticalAlignment="Top" HorizontalAlignment="Left">
			<MenuItem Header="File">
				<MenuItem Header="New" Click="OnClick_New"/>
				<MenuItem Header="Open" Click="OnClick_Open"/>
				<MenuItem Header="Save" Click="OnClick_Save"/>
				<MenuItem Header="Close" Click="OnClick_Close"/>
				<MenuItem Header="Exit" Click="OnClick_Exit"/>
			</MenuItem>
			<MenuItem Header="Options">
				<MenuItem Header="Add a speaker" Click="OnClick_AddRemoveSpeakers"/>
			</MenuItem>
		</Menu>
		<Border Name="ButtonsPanelBorder" Grid.Row="0" Grid.Column="1" BorderThickness="1,0,0,1" BorderBrush="Black" Background="White">
			<StackPanel Name="ButtonsPanel" Orientation="Vertical" Background="LightYellow" IsEnabled="false">
				<StackPanel Name="OtherActionsButtonsPanel" Orientation="Vertical" Margin="10">
					<Button Margin="2" Click="OnClick_CreateBranchAtEndOfPage">
						<TextBlock>
							<TextBlock FontSize="26" Foreground="Black" Text="Add a "/>
							<TextBlock FontSize="26" Foreground="Purple" Text="CHOICE"/>
						</TextBlock>
					</Button>	
					<Button Margin="2" Click="OnClick_AddAction">
						<TextBlock>
							<TextBlock FontSize="26" Foreground="Black" Text="Add an "/>
							<TextBlock FontSize="26" Foreground="Brown" Text="ACTION"/>
						</TextBlock>
					</Button>	
					<Button Click="ONTEMPCLICK">Attack on this line</Button>
				</StackPanel>
				<StackPanel Name="SpeakersButtonsPanel" Orientation="Vertical" Margin="10">
					<Button Name="AddSpeakersButton" Margin="2" Click="OnClick_AddRemoveSpeakers">
						<TextBlock FontSize="26" Foreground="Black" Text="Add another speaker"/>
					</Button>						
				</StackPanel>
			</StackPanel>
		</Border>
		<Border Name="graphBorder" Grid.Row="1" Grid.Column="1" BorderThickness="1,0,0,0" BorderBrush="Black" Grid.ZIndex="-1">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition Height="50"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<uiw:GraphWindow x:Name="mainGraphViewer" Grid.Row="0" Grid.Column="0" />
				<Button Grid.Row="1" Grid.Column="0" Click="OnClick_ExpandGraph">Expand Graph</Button>
			</Grid>
		</Border>
		<Border Name="LinesPanelBorder" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ZIndex="1">
	    	<StackPanel Name="LinesPanel" Orientation="Vertical" Margin="10" />
	    </Border>
	</Grid>
</Window>
