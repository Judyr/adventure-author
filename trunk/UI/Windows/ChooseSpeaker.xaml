<Window x:Class="AdventureAuthor.UI.Windows.ChooseSpeaker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Choose a speaker:" Height="300" Width="300"
    >
    <StackPanel>
        <ListBox x:Name="SpeakersList" SelectionMode="Single">
    		<ListBox.ItemsSource>
        		<Binding Source="{StaticResource speakers}" Mode="OneTime"/> 
        	</ListBox.ItemsSource>
    	</ListBox>
		<Button Click="OnClickOK">OK</Button>
		<Button Click="OnClickCancel">Cancel</Button>
    </StackPanel>
</Window>
