<Window x:Class="AdventureAuthor.UI.Windows.SoundWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Choose a sound" Height="300" Width="400"
    >
    <Grid>
		<Grid.RowDefinitions>
    		<RowDefinition/>
    		<RowDefinition/>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition/>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
    		<ComboBox Name="SoundBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" IsReadOnly="true" IsEditable="false" IsTextSearchEnabled="true"/>
    		<TextBox Name="CurrentSoundTextBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" IsEnabled="false"/>
        	<Button Content="OK" Grid.Row="2" Grid.Column="1" Click="OnClick_OK"/>
   			<Button Content="Cancel" Grid.Row="2" Grid.Column="0" Click="OnClick_Cancel"/>
    </Grid>
</Window>
