<Window x:Class="AdventureAuthor.UI.Windows.VariablesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AdventureAuthor.UI.Windows" Height="600" Width="800"
    >
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="100"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="400" Width="*"/>
			<ColumnDefinition MinWidth="400" Width="*"/>
		</Grid.ColumnDefinitions>
        <ListBox Name="StringVariablesList" Grid.Column="0" Grid.Row="0" Background="LightBlue"/>
        <ListBox Name="IntegerVariablesList" Grid.Column="1" Grid.Row="0" Background="Pink"/>
        <Canvas Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
        	<Button Canvas.Top="10" Canvas.Right="10" Height="40" Width="120" Content="Add variable" Click="OnClick_AddVariable"/>
        </Canvas>
    </Grid>
</Window>
