<UserControl x:Class="AdventureAuthor.UI.Controls.ActionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	MouseDown="OnMouseDown">
    <Grid>
		<Grid.RowDefinitions>
    		<RowDefinition MinHeight="50" MaxHeight="50"/>
    		<RowDefinition MinHeight="0"/>
    	</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="100"/>
    		<ColumnDefinition Width="*"/>
    	</Grid.ColumnDefinitions>
		<Button x:Name="EditActionButton" Grid.Row="0" Grid.Column="0" IsEnabled="False" Opacity="0.0" Click="OnClick_EditAction" 
				Width="85" Height="35" FontSize="16" Content="Edit Action"/>
		<TextBlock x:Name="ActionDescriptionTextBlock" Background="Transparent" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" 
				   FontSize="22" FontWeight="700" Padding="6" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
