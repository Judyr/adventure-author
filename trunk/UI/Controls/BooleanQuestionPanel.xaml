<UserControl x:Class="AdventureAuthor.UI.Controls.BooleanQuestionPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Height="120" Width="500"  Background="LightYellow">
    <Canvas>
		<TextBlock Name="QuestionLabel" Canvas.Top="25" Canvas.Left="25" Height="40" Width="450" Foreground="Red" FontSize="16"/>
		<RadioButton Name="YesButton" Canvas.Top="70" Canvas.Left="25" Height="30" Width="180" Foreground="Black" FontSize="16"/>
		<RadioButton Name="NoButton" Canvas.Top="70" Canvas.Left="225" Height="30" Width="180" Foreground="Black" FontSize="16"/>
	</Canvas>
</UserControl>
