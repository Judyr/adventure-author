<UserControl x:Class="AdventureAuthor.UI.Controls.StringVariableControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="250" Width="*"/> <!--variable name-->
			<ColumnDefinition MinWidth="150" Width="*"/> <!--variable value-->
			<ColumnDefinition Width="50"/> <!--delete-->
		</Grid.ColumnDefinitions>
		<TextBlock Name="VariableNameTextBox" Grid.Row="0" Grid.Column="0" />
		<TextBox Name="VariableValueTextBox" Grid.Row="0" Grid.Column="1" />
	    <Button Grid.Row="0" Grid.Column="2" Margin="6" Width="20" Height="20" IsEnabled="true" Opacity="1.0" Click="OnClick_Delete">
    		<Button.ToolTip>
    			<ToolTip>Delete this variable</ToolTip>
    		</Button.ToolTip>
	    	<Image Source="C:\ConversationWriter\deleteicon.jpg" />
	    </Button> 
    </Grid>
</UserControl>
