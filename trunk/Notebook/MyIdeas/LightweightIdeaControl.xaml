<UserControl x:Class="AdventureAuthor.Notebook.MyIdeas.LightweightIdeaControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="LightGreen">
    <StackPanel Orientation="Vertical" Margin="10">
    	<Label>Type your idea in the box below:</Label> 
    	<StackPanel Orientation="Horizontal">
			<TextBox Name="IdeaTextBox" Height="30" Width="200"/>
    		<Button Width="80" Height="25" Margin="7" Click="OnClick_RecordIdea">Keep</Button>
    		<Button Width="80" Height="25" Click="OnClick_ClearIdea">Clear</Button>
    	</StackPanel>
		<Label Name="IdeaSavedLabel" Opacity="0.0">Idea has been saved</Label>
		<Button Click="OnClick_OpenIdeaScrapbook">Open scrapbook</Button>
    </StackPanel>
</UserControl>