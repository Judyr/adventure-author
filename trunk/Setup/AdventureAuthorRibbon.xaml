<Window x:Class="AdventureAuthor.Setup.AdventureAuthorRibbon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:setup="clr-namespace:AdventureAuthor.Setup"
    Title="Adventure Author ribbon"
	Width="360"
    Height="250"
    ResizeMode="NoResize"
	Background="LightBlue"
	WindowStyle="ToolWindow"
	Closing="CancelClose"
    >
	
	<Window.Resources>	
	
		<Style TargetType="{x:Type Button}">
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="IsEnabled" Value="False"/>
			<Setter Property="Height" Value="50"/>
			<Setter Property="Width" Value="100"/>
			<Setter Property="Margin" Value="4"/>
		</Style>
			
	</Window.Resources>
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
	
	    <WrapPanel Grid.Row="0"
		           Grid.Column="0"
	               Margin="10">
			<Button Content="Conversation Writer"/>	
			<Button Content="Variable Manager"/>
			<Button Content="Fridge Magnets"/>
			<Button Content="My Tasks"/>
			<Button Content="Comment Cards"/>
			<Button Content="My Achievements"/>	
		</WrapPanel>
	
		<setup:MessagePanel x:Name="userMessagePanel"
							Grid.Row="1"
							Grid.Column="0"/>

	</Grid>

</Window>