<UserControl x:Class="AdventureAuthor.Variables.UI.VariableControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Background="LightYellow" MinWidth="700" MaxWidth="700" MinHeight="35" MaxHeight="35">
	<Border>
    <Canvas>
		<TextBlock Name="VariableNameTextBox" FontSize="14" FontFamily="Helvetica" Foreground="Black" Canvas.Top="10" Canvas.Left="10" Height="25" Width="230" FontWeight="SemiBold"/>
		<TextBlock Name="VariableTypeTextBox" FontSize="14" FontFamily="Helvetica" Foreground="Black" Canvas.Top="10" Canvas.Left="260" Height="25" Width="80"/>
		<TextBlock Name="VariableValueTextBox" FontSize="14" FontFamily="Helvetica" Foreground="Black" Canvas.Top="10" Canvas.Left="360" Height="25" Width="210"/>
		<Button Name="DeleteButton" Canvas.Top="2" Canvas.Left="570" Margin="6" Width="50" Height="25" IsEnabled="true" Opacity="1.0" Content="Delete" Click="OnClick_Delete">
	    	<Button.ToolTip>
	    		<ToolTip>Delete this variable</ToolTip>
	    	</Button.ToolTip>
		</Button>  			
    	<Button Canvas.Top="2" Canvas.Left="630" Margin="6" Width="40" Height="25" IsEnabled="true" Opacity="1.0" Content="Edit" Click="OnClick_Edit">
	   		<Button.ToolTip>
	   			<ToolTip>Edit this variable</ToolTip>
	   		</Button.ToolTip>
		</Button>    	
	</Canvas>
	</Border>
</UserControl>
