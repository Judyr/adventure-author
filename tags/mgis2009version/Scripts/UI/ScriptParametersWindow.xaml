<Window x:Class="AdventureAuthor.Scripts.UI.ScriptParametersWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Enter script parameters..." MinWidth="500" MaxWidth="500">
    <StackPanel Orientation="Vertical">
        <StackPanel Name="QuestionsPanel" Orientation="Vertical" />
    	<StackPanel Name="OKCancelPanel" Orientation="Horizontal" FlowDirection="RightToLeft" Background="SlateGray">    		
    		<Button Content="OK" Click="OnClick_OK" Width="100" Margin="10"/>
    		<Button Content="Cancel" Click="OnClick_Cancel" Height="40" Width="100" Margin="0,10,10,10"/>
    	</StackPanel>
    </StackPanel>
</Window>
