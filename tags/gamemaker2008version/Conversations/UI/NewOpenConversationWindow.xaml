<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="AdventureAuthor.Conversations.UI.NewOpenConversationWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="369"
	Height="160"
	Title="Welcome to the Conversation Writer"
	WindowStartupLocation="CenterScreen">
	<Grid
		Background="LemonChiffon">
		<Panel.Children>
			<Button
				Content="Start a new conversation"
				Grid.Column="0"
				Grid.Row="0"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Top"
				Margin="64,20,64,0"
				Height="34"
				Name="btn_NewConversation"
				Click="OnClick_StartNewConversation"
				Grid.ColumnSpan="3"
				FontSize="14" />
			<Button
				FontSize="14"
				Content="Open an existing conversation"
				Grid.Column="0"
				Grid.Row="0"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Bottom"
				Margin="64,0,63,28"
				Height="34"
				Name="btn_OpenConversation"
				Click="OnClick_OpenExistingConversation"
				Grid.ColumnSpan="3" />
		</Panel.Children>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="0.295264623955432*" />
			<ColumnDefinition
				Width="0.35670753381719*" xmlns="http://schemas.microsoft.com/netfx/2007/xaml/presentation" />
			<ColumnDefinition
				Width="0.348027842227378*" />
		</Grid.ColumnDefinitions>
	</Grid>
</Window>