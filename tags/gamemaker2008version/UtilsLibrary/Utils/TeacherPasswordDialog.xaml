<Window x:Class="AdventureAuthor.Utils.TeacherPasswordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Enter teacher password"
	SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Vertical">
		<TextBlock Text="You must be a teacher to perform this action. Enter the teacher password to continue."
				   TextWrapping="Wrap" Width="250" Height="60"
				   FontSize="14" Margin="8"/>
		<PasswordBox Name="TeacherPasswordBox" Width="150" Height="30" MaxLength="32" Margin="10"
    	             HorizontalAlignment="Center" FontSize="14"/>
		<StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
    		<Button FontSize="14" Content="OK" Click="OnClick_OK" Margin="4" Height="30" Width="80" IsDefault="true"/>
    		<Button FontSize="14" Content="Cancel" Click="OnClick_Cancel" Margin="4" Height="30" Width="80"/>
    	</StackPanel>
	</StackPanel>
</Window>