<local:ParameterPanel x:Class="AdventureAuthor.Scripts.UI.VariableQuestionPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AdventureAuthor.Scripts.UI"
 	Height="120" Width="500" Background="Pink">
    <Canvas>
		<TextBlock Name="QuestionLabel" FontSize="16" Foreground="Red" Canvas.Top="15" Canvas.Left="15" Height="40" Width="450"/>
		<ComboBox Name="AnswerBox" Canvas.Top="60" Canvas.Left="15" Height="25" Width="180"
    			  IsReadOnly="true" IsEditable="false" IsTextSearchEnabled="true"/>
		<Button Name="LaunchVariableManagerButton" Content="Edit Variables" Click="OnClick_LaunchVariableManagerButton"
    	        Canvas.Top="60" Canvas.Right="15" Height="30" Width="120"/>
	</Canvas>
</local:ParameterPanel>
